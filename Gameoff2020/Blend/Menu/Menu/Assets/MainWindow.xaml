<UserControl x:Class="Menu.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Grid>
    <StackPanel VerticalAlignment="Center">
        <StackPanel Width="200" HorizontalAlignment="Center">
            <Button Content="Press Button" Margin="10" x:Name="button" FontSize="24" Command="{Binding ButtonPressCommand}"/>
            <RadioButton HorizontalAlignment="Center" IsChecked="{Binding IsButtonPressed}"/>
        </StackPanel>
    </StackPanel>
   </Grid>
</UserControl>
