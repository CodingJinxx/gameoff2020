<UserControl x:Class="Menu.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Grid>
    <StackPanel VerticalAlignment="Center">
        <StackPanel Width="130" HorizontalAlignment="Center">
            <Button Content="Start" Margin="10" x:Name="startButton" FontSize="24" Command="{Binding StartButton}"/>
            <Button Content="Options" Margin="10" x:Name="optionsButton" FontSize="24" Command="{Binding OptionsButton}"/>
            <Button Content="Exit" Margin="10" x:Name="exitButton" FontSize="24" Command="{Binding ExitButton}"/>
        </StackPanel>
        <TextBlock Text="{Binding DebugText}"  HorizontalAlignment="Center" FontSize="36" x:Name="debugTextBlock"/>
    </StackPanel>
   </Grid>
</UserControl>
