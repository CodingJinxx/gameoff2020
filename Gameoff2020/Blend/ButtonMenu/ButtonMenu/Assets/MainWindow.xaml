<UserControl x:Class="ButtonMenu.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Grid>
        <StackPanel Width="200" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button FontSize="36" Command="{Binding ButtonPressedCommand}">Press</Button>
            <RadioButton IsChecked="{Binding IsButtonPressed}" HorizontalAlignment="Center" Margin="0 10 0 0"></RadioButton>
        </StackPanel>
  </Grid>
</UserControl>
